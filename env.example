# Universal Site Extractor v2 - Environment Configuration

# User agent for web requests
BASE_USER_AGENT="UniversalExtractor/2.0 (+contact@example.com)"

# Concurrency settings
GLOBAL_CONCURRENCY=12
PER_HOST_LIMIT=6

# Timeouts (in seconds)
REQUEST_TIMEOUT_SEC=20
RENDER_TIMEOUT_SEC=30

# Default limits
MAX_PAGES_DEFAULT=400
MAX_DEPTH_DEFAULT=5

# Rendering settings
RENDER_ENABLED=false
RENDER_BUDGET=0.10
MIN_TEXT_DENSITY=200

# Storage settings
RUNS_DIR=runs
MAX_FILE_SIZE_MB=50

# Retry settings
MAX_RETRIES=3
RETRY_DELAY_BASE=1.0
RETRY_DELAY_MAX=60.0

# Rate limiting
REQUESTS_PER_SECOND=2.0
BURST_SIZE=5

# Content processing
MAX_TEXT_LENGTH=1000000
MAX_IMAGE_SIZE_MB=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Development settings (uncomment for development)
# DEBUG=true
# RELOAD=true


